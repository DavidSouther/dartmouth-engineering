.menu-item
  position relative
  display block
  width 100%
  max-height 40px
  line-height 40px
  margin 0
  padding 0px 28px
  font-size inherit
  color #333
  text-align left
  text-decoration none
  background none
  opacity 1
  border-width 0
  outline none
  cursor pointer
  z-index 1
  transition 0.45s cubic-bezier(0.35, 0, 0.25, 1)
  transition-property max-height, background-color, opacity

  &.ng-hide
    max-height 0
    opacity 0

  &:hover
    color #999

  &:focus
    font-weight bold

  &.menu-title
    padding-left 16px
    font-size 14px
    text-align left
    color #888
    text-transform uppercase
    transition color 0.35s cubic-bezier(0.35, 0, 0.25, 1)

    &:hover,
    &.active
      color #1976d2
