md-content
  md-toolbar.md-whiteframe-z1.toolbar
    section(layout="row", layout-align="space-around")
      md-content.md-padding(
        flex="33"
        layout="column",
        layout-align="left center",
      )
        div.supported-weight-label
          | Applied&nbsp;Load
          br
          span.material-property-value {{ simulation.applied / 1e3 | number:0}}
          | kN
        md-slider(
          ng-model="simulation.applied",
          min="{{ simulation.internal() }}",
          max="{{ 1.1 * simulation.failure() }}"
        )
      md-content.md-padding(
        flex="33"
        layout="column",
        layout-align="left center",
      )
        div.supported-weight-label
          | Height
          br
          span.material-property-value {{ simulation.height | number:0}}
          | m
        md-slider(
          ng-model="simulation.height",
          min="20",
          max="600",
          step="1"
        )
      md-content.md-padding(
        flex="33"
        layout="column",
        layout-align="left center",
      )
        div.supported-weight-label
          | Span
          br
          span.material-property-value {{ simulation.span | number:0}}
          | m
        md-slider(
          ng-model="simulation.span",
          min="50",
          max="600",
          step="1"
        )
  div(
    layout="row",
    layout-align="space-around"
  )
    md-content.md-padding(
      flex="30",
      layout="column"
    )
      div(flex="10", layout="column")
        b Horizontal Load:
        | {{ simulation.loadX() / 1e3 | number:0 }}&nbsp;kN
      div(flex="10", layout="column")
        b Vertical Load:
        | {{ simulation.loadY() / 1e3 | number:0 }}&nbsp;kN
      div(flex)
    div(flex, layout="row", layout-align="center center")
      svg(
        height="400px"
        width="400px"
        graph-scales="{\
          x: ['linear', -350, 350], \
          y: ['linear', 550, -50], \
          rx: ['linear', 0, 600, 0, 400], \
          ry: ['linear', 0, 600, 0, 400], \
          ax: ['linear', 0, simulation.failure(), 10, 25],\
          ay: ['linear', 0, simulation.failure(), 10, 25]\
        }"
      )
        g#arch
          path(
            stroke="black"
            stroke-width="1px"
            fill="lightgrey"
            ng-attr-d="\
              M{{ $scales.x(-simulation.span / 2) }} {{ $scales.y(0) }}\
              A {{ $scales.rx(simulation.span / 2) }} {{ $scales.ry(simulation.height) }}\
                0, 0, 1, \
                {{ $scales.x(simulation.span / 2) }} {{ $scales.y(0) }}\
              L{{ $scales.x(simulation.span / 2 * .9) }} {{ $scales.y(0) }}\
              A{{ $scales.rx(simulation.span / 2 * .9) }} {{ $scales.ry(simulation.height * .9) }}\
                0, 0, 0, \
                {{ $scales.x(-simulation.span / 2 * .9) }} {{ $scales.y(0) }}\
              Z\
            "
          )
        g#arrows
          path(
            stroke="darkblue"
            stroke-width="1px"
            fill="none"
            ng-attr-d="\
              M{{ $scales.x(-simulation.span / 2) }} {{ $scales.y(0) }}\
              h{{ -$scales.ax(simulation.loadX()) }} \
              l5,-5\
            "
          )
          path(
            stroke="darkblue"
            stroke-width="1px"
            fill="none"
            ng-attr-d="\
              M{{ $scales.x(-simulation.span / 2) + 2 }} {{ $scales.y(0)  }}\
              v{{ $scales.ax(simulation.loadY()) }} \
              l5,-5\
            "
          )
