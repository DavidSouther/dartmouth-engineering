md-content(ng-init="simDetails = false")
  md-toolbar.md-whiteframe-z1.toolbar
    section(layout="row", layout-align="left center")
      md-button(ng-click="simulation.tick(dt)", flex="10") Tick
      md-button(
        ng-click="simulation.toggle()"
        flex="10"
      ) {{ simulation.running ? 'Pause': 'Run' }}
      md-button(ng-click="simulation.reset()", flex="10") Reset
      md-text-float(flex="60", label="Milliseconds", ng-model="simulation.dt")
  md-list
    md-item(layout="row", layout-align="center")
      div
        arch(bricks="simulation.particles")
    md-divider
    md-item
      md-button(ng-click="simDetails = !simDetails")
        | {{ simDetails ? "Hide" : "Show" }} Details
    md-item(
      ng-repeat="particle in simulation.particles"
      ng-if="simDetails"
    )
      md-item-content
        div.md-tile-content(layout="row")
          div(flex="5")
            span {{ $index }}
          div(layout flex)
            div(flex="10" layout layout-align="center center")
              span X
            md-slider(
              flex,
              min="0" max="1" step="0.001",
              ng-model="particle.position[0]",
              aria-label="X"
            )
            div(flex="20" layout layout-align="center center")
              input(type="number" ng-model="particle.position[0]")
          div(layout flex)
            div(flex="10", layout layout-align="center center")
              span Y
            md-slider(
              flex,
              min="0" max="1" step="0.001",
              ng-model="particle.position[1]",
              aria-label="Y"
            )
            div(flex="20" layout layout-align="center center")
              input(type="number", ng-model="particle.position[1]")
