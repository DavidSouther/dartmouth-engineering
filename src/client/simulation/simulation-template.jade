md-content
  md-list
    md-item
      md-item-content
        div.md-tile-content
          form(name="step", style="padding: 20px;")
            section(layout="row", layout-align="center center")
              md-button.md-raised(ng-click="simulation.tick(dt)") Tick
              md-text-float(label="Milliseconds", ng-model="dt")
              md-button.md-raised(ng-click="simulation.reset()") Reset
    md-item(layout="row", layout-align="center")
      div
        arch(bricks="simulation.particles")
    md-item(ng-repeat="particle in simulation.particles")
      md-item-content
        div.md-tile-content(layout="row")
          div(flex="5")
            span {{ $index }}
          div(layout flex)
            div(flex="10" layout layout-align="center center")
              span X
            md-slider(
              flex,
              min="0" max="1" step="0.001",
              ng-model="particle.position[0]",
              aria-label="X"
            )
            div(flex="20" layout layout-align="center center")
              input(type="number" ng-model="particle.position[0]")
          div(layout flex)
            div(flex="10", layout layout-align="center center")
              span Y
            md-slider(
              flex,
              min="0" max="1" step="0.001",
              ng-model="particle.position[1]",
              aria-label="Y"
            )
            div(flex="20" layout layout-align="center center")
              input(type="number", ng-model="particle.position[1]")
